<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <CheckBox
        android:layout_gravity="center_vertical"
        android:id="@+id/chk_cart_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center_vertical"
        android:id="@+id/iv_cart_goodsIcon"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:maxLines="2"
            android:textSize="13sp"
            android:id="@+id/tv_cart_goodsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:text="@string/price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:text="20"
                android:id="@+id/tv_cart_goodsPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

                <TextView
                    android:layout_marginLeft="110dp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:id="@+id/tv_cart_goodsReduce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"/>

                <EditText
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:textSize="13sp"
                    android:id="@+id/et_cart_goodsNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"/>

                <TextView
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:id="@+id/tv_cart_goodsAdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"/>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
