<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"              android:orientation="vertical"              android:layout_width="match_parent"              android:layout_height="match_parent">    <android.support.v7.widget.Toolbar        android:id="@+id/tb_loginAct"        android:background="@color/colorPrimary"        android:layout_width="match_parent"        android:layout_height="40dp">        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="match_parent">            <TextView                android:id="@+id/tv1"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:gravity="center"                android:textColor="@color/colorWhite"                android:text="我的钱包"                android:layout_centerInParent="true"/>            <ImageView                android:id="@+id/iv_back"                android:onClick="onBackClick"                android:clickable="true"                android:background="?attr/selectableItemBackground"                android:layout_alignParentStart="true"                android:layout_alignParentLeft="true"                android:scaleType="centerInside"                android:src="@mipmap/wallet_back"                android:layout_alignTop="@+id/tv1"                android:layout_alignBottom="@+id/tv1"                android:layout_width="wrap_content"                android:layout_height="match_parent" />        </RelativeLayout>    </android.support.v7.widget.Toolbar>    <RelativeLayout        android:background="@color/colorPrimary"        android:layout_width="match_parent"        android:layout_height="250dp">        <TextView            android:layout_marginTop="80dp"            android:text="账户余额（元）"            android:layout_marginLeft="15dp"            android:textColor="@color/colorWhite"            android:textSize="19sp"            android:layout_width="wrap_content"            android:layout_height="wrap_content"/>        <TextView            android:id="@+id/wallet_money"            android:textStyle="bold"            android:layout_marginTop="120dp"            android:text="0.00"            android:layout_marginLeft="15dp"            android:textColor="@color/colorWhite"            android:textSize="45sp"            android:layout_width="wrap_content"            android:layout_height="wrap_content"/>    </RelativeLayout>    <RelativeLayout        android:id="@+id/add_wallet"        android:background="?attr/selectableItemBackground"        android:clickable="true"        android:layout_width="match_parent"        android:layout_height="50dp">        <ImageView            android:src="@drawable/frgme_wallet"            android:layout_marginLeft="10dp"            android:layout_centerVertical="true"            android:layout_width="20dp"            android:layout_height="20dp" />        <TextView            android:text="充值"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:layout_marginLeft="50dp"            android:layout_centerVertical="true"/>        <View            android:layout_width="match_parent"            android:layout_height="1dp"            android:background="@color/dividerColor"            android:layout_alignParentBottom="true"/>    </RelativeLayout></LinearLayout>