<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"                android:background="@color/colorWhite"              android:orientation="vertical"              android:layout_width="match_parent"              android:layout_height="wrap_content">    <RelativeLayout        android:id="@+id/comment_rl"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:paddingLeft="10dp"        android:paddingRight="10dp">    <com.android.tkengine.elccommerce.utils.CircleImageView        android:layout_marginTop="15dp"        android:id="@+id/comment_icon"        android:src="@drawable/touxiang"        android:layout_width="32dp"        android:layout_height="32dp"/>    <TextView        android:layout_marginLeft="10dp"        android:layout_marginTop="25dp"        android:id="@+id/comment_name"        android:layout_toRightOf="@+id/comment_icon"        android:layout_width="wrap_content"        android:text="Cat"        android:textSize="12sp"        android:layout_height="wrap_content"/>    <TextView        android:textSize="12sp"        android:text="2016-8-11"        android:id="@+id/comment_time"        android:layout_below="@+id/comment_content"        android:layout_marginTop="10dp"        android:layout_width="wrap_content"        android:layout_height="wrap_content"/>    <RatingBar        android:id="@+id/comment_grade"        android:layout_toRightOf="@+id/comment_name"        android:layout_marginLeft="10dp"        android:layout_marginTop="25dp"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:numStars="5"        android:rating="5"        android:isIndicator="true"        android:stepSize="1"        style="@style/Base.Widget.AppCompat.RatingBar.Small"/>    <TextView        android:layout_marginTop="10dp"        android:id="@+id/comment_content"        android:layout_below="@+id/comment_icon"        android:layout_width="wrap_content"        android:text="haochihaochihaohoiefjowenoiuejwvew"        android:textSize="12sp"        android:layout_height="wrap_content"/>    </RelativeLayout>    <View        android:layout_below="@+id/comment_rl"        android:layout_marginTop="10dp"        android:background="@color/colorGray"        android:layout_width="match_parent"        android:layout_height="1.0px"        /></RelativeLayout>