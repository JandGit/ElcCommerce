<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frm_whatPage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/tag_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_tagHome"
                android:layout_marginTop="1dp"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/home"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_tagHome"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_below="@id/iv_tagHome"
                android:text="首页"
                android:gravity="center" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tag_shop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_tagShop"
                android:scaleType="fitXY"
                android:layout_marginTop="1dp"
                android:layout_alignParentTop="true"
                android:layout_width="28dp"
                android:layout_height="20dp"
                android:src="@drawable/shop" />

            <TextView
                android:id="@+id/tv_tagShop"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_below="@id/iv_tagShop"
                android:gravity="center"
                android:text="店铺" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tag_cart"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_tagCart"
                android:scaleType="fitXY"
                android:layout_marginTop="1dp"
                android:layout_alignParentTop="true"
                android:layout_width="28dp"
                android:layout_height="20dp"
                android:src="@drawable/cart" />

            <TextView
                android:id="@+id/tv_tagCart"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_below="@id/iv_tagCart"
                android:gravity="center"
                android:text="购物车" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tag_my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_tagMy"
                android:scaleType="fitXY"
                android:layout_marginTop="1dp"
                android:layout_width="28dp"
                android:layout_alignParentTop="true"
                android:layout_height="20dp"
                android:src="@drawable/my" />

            <TextView
                android:id="@+id/tv_tagMy"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_below="@id/iv_tagMy"
                android:gravity="center"
                android:text="我的" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>