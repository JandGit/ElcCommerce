<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frm_whatPage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

        <RelativeLayout
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@color/colorWhite"
            >
        <View
            android:layout_width="match_parent"
            android:layout_height="1.0px"
            android:layout_alignParentTop="true"
            android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/tag_home"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_tagHome"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:src="@drawable/home"/>
                <TextView
                    android:id="@+id/tv_tagHome"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/home"
                    android:textSize="10sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:id="@+id/tag_shop"
                android:layout_width="90dp"
                android:layout_marginLeft="90dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_tagShop"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:src="@drawable/shop"
                    />
                <TextView
                    android:id="@+id/tv_tagShop"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/store"
                    android:textSize="10sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="180dp"
                android:layout_marginTop="5dp"
                android:id="@+id/tag_cart"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_tagCart"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:src="@drawable/cart"
                    />
                <TextView
                    android:id="@+id/tv_tagCart"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/cart"
                    android:textSize="10sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="270dp"
                android:layout_marginTop="5dp"
                android:id="@+id/tag_my"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_tagMy"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:src="@drawable/my"
                    />
                <TextView
                    android:id="@+id/tv_tagMy"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/my"
                    android:textSize="10sp"
                    />
            </LinearLayout>


    </RelativeLayout>
</LinearLayout>