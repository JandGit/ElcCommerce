<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="110dp"
    android:orientation="horizontal">

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"
        android:id="@+id/iv_search_goodsIcon"
        android:layout_marginLeft="10dp"
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/iv_search_goodsIcon"
        android:layout_marginLeft="10dp"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorBlack"
                android:textSize="13sp"
                android:maxLines="2"
                android:id="@+id/tv_search_goodsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="25dp">
            <TextView
                android:id="@+id/search_goods_mark"
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:text="@string/price"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:gravity="center_vertical"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:text="20"
                android:id="@+id/tv_search_goodsPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/search_goods_mark"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:id="@+id/tv_search_goodsPlace"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:text="产地"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textSize="14sp"
                android:gravity="center"
                android:text="销量"/>

            <TextView
                android:id="@+id/tv_search_goodsSale"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:text="销量"/>

            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textSize="14sp"
                android:gravity="center"
                android:text="库存"/>

            <TextView
                android:id="@+id/tv_search_goodsStore"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textSize="14sp"
                android:gravity="center"
                android:text="库存"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_alignParentBottom="true"
        android:background="@color/colorGray"
        android:layout_width="match_parent"
        android:layout_height="1.0px"
        />



</RelativeLayout>
