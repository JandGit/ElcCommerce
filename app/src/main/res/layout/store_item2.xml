<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"              android:orientation="horizontal"              android:layout_marginBottom="5dp"              android:layout_width="match_parent"              android:layout_height="wrap_content">       <LinearLayout           android:id="@+id/store_goods_item1"           android:background="@color/colorWhite"            android:layout_marginRight="2.5dp"            android:orientation="vertical"            android:layout_weight="1"            android:layout_width="0dp"            android:layout_height="wrap_content">            <ImageView                android:id="@+id/store_goods_icon1"                android:layout_gravity="center_horizontal"                android:layout_width="match_parent"                android:layout_height="150dp"/>            <TextView                android:id="@+id/store_goods_name1"                android:paddingLeft="12dp"                android:paddingRight="12dp"                android:paddingTop="5dp"                android:textSize="13sp"                android:maxLines="2"                android:layout_width="wrap_content"                android:layout_height="35dp"/>               <LinearLayout                   android:layout_marginBottom="10dp"                   android:orientation="horizontal"                   android:layout_marginTop="5dp"                   android:layout_width="match_parent"                   android:layout_height="match_parent">                   <TextView                       android:textColor="@color/colorPrimary"                       android:textSize="15sp"                       android:layout_marginLeft="12dp"                       android:text="@string/price"                       android:layout_width="wrap_content"                       android:layout_height="wrap_content"/>                   <TextView                       android:id="@+id/store_goods_price1"                       android:textColor="@color/colorPrimary"                       android:textSize="15sp"                       android:layout_marginLeft="5dp"                       android:layout_width="wrap_content"                       android:layout_height="wrap_content"/>                   <TextView                       android:id="@+id/store_goods_sales1"                       android:layout_marginRight="10dp"                       android:gravity="right"                       android:textColor="@android:color/darker_gray"                       android:textSize="12sp"                       android:layout_width="match_parent"                       android:layout_height="wrap_content"/>           </LinearLayout>    </LinearLayout>    <LinearLayout        android:id="@+id/store_goods_item2"        android:background="@color/colorWhite"        android:layout_marginLeft="2.5dp"        android:orientation="vertical"        android:layout_weight="1"        android:layout_width="0dp"        android:layout_height="wrap_content">        <ImageView            android:id="@+id/store_goods_icon2"            android:layout_gravity="center_horizontal"            android:layout_width="match_parent"            android:layout_height="150dp"/>        <TextView            android:id="@+id/store_goods_name2"            android:paddingLeft="12dp"            android:paddingRight="12dp"            android:paddingTop="5dp"            android:textSize="13sp"            android:maxLines="2"            android:layout_width="wrap_content"            android:layout_height="35dp"/>        <LinearLayout            android:layout_marginBottom="10dp"            android:orientation="horizontal"            android:layout_marginTop="5dp"            android:layout_width="match_parent"            android:layout_height="match_parent">            <TextView                android:textColor="@color/colorPrimary"                android:textSize="15sp"                android:layout_marginLeft="12dp"                android:text="@string/price"                android:layout_width="wrap_content"                android:layout_height="wrap_content"/>            <TextView                android:id="@+id/store_goods_price2"                android:textColor="@color/colorPrimary"                android:textSize="15sp"                android:layout_marginLeft="5dp"                android:layout_width="wrap_content"                android:layout_height="wrap_content"/>            <TextView                android:id="@+id/store_goods_sales2"                android:layout_marginRight="10dp"                android:gravity="right"                android:textColor="@android:color/darker_gray"                android:textSize="12sp"                android:layout_width="match_parent"                android:layout_height="wrap_content"/>        </LinearLayout>    </LinearLayout></LinearLayout>