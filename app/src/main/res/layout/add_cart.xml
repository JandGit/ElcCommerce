"match_parent"            android:layout_height="70dp">            <TextView                android:gravity="center_vertical"                android:textSize="13sp"                android:textColor="@color/colorBlack"                android:text="@string/purchase_number"                android:layout_width="wrap_content"                android:layout_height="match_parent"/>            <LinearLayout                android:layout_width="wrap_content"                android:layout_height="match_parent"                android:orientation="horizontal"                android:layout_alignParentRight="true">                <TextView                    android:background="@color/colorLightGray"                    android:layout_gravity="center_vertical"                    android:layout_width="30dp"                    android:layout_height="30dp"                    android:textSize="20sp"                    android:gravity="center"                    android:id="@+id/add_cart_sub"                    android:text="â€”"/>                <EditText                    android:layout_marginLeft="5dp"                    android:background="@color/colorLightGray"                    android:layout_gravity="center_vertical"                    android:textSize="15sp"                    android:gravity="center"                    android:id="@+id/add_cart_number"                    android:textColor="@color/colorBlack"                    android:layout_width="35dp"                    android:layout_height="30dp"                    android:text="199"/>                <TextView                    android:layout_marginLeft="5dp"                    android:background="@color/colorLightGray"                    android:layout_gravity="center"                    android:gravity="center"                    android:id="@+id/add_cart_add"                    android:layout_width="30dp"                    android:layout_height="30dp"                    android:textSize="20sp"                    android:text="+"/>            </LinearLayout>        </RelativeLayout>        <View            android:layout_width="match_parent"            android:layout_height="1.0px"            android:background="@android:color/darker_gray" />        </LinearLayout>    </RelativeLayout>    <ImageView        android:id="@+id/add_cart_icon"        android:layout_marginLeft="10dp"        android:layout_marginTop="200dp"        android:src="@mipmap/apple"        android:background="@drawable/button_shape"        android:layout_width="120dp"        android:layout_height="120dp"/>    <TextView        android:gravity="center"        android:layout_alignParentBottom="true"        android:text="@string/sure"        android:layout_width="match_parent"        android:textColor="@color/colorWhite"        android:textSize="18sp"        android:background="@color/colorPrimary"        android:layout_height="50dp"/></RelativeLayout>