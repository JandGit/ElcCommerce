<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"              android:orientation="vertical"              android:layout_width="match_parent"              android:layout_height="300dp">    <FrameLayout        android:layout_width="match_parent"        android:layout_height="300dp">    <android.support.v4.view.ViewPager        android:id="@+id/goods_pager"        android:layout_width="match_parent"        android:layout_height="match_parent"/>    <LinearLayout        android:id="@+id/bottom_indicator"        android:layout_marginBottom="5dp"        android:orientation="horizontal"        android:layout_width="wrap_content"        android:layout_height="20dp"        android:layout_gravity="bottom|center_horizontal"/>    </FrameLayout></LinearLayout>