<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"              android:layout_width="match_parent"                android:fitsSystemWindows="true"                android:clipToPadding="true"              android:layout_height="match_parent">    <include layout="@layout/title"/>    <ScrollView        android:fillViewport="true"        android:layout_marginTop="40dp"        android:layout_width="match_parent"        android:scrollbars="none"        android:layout_height="wrap_content">        <LinearLayout            android:orientation="vertical"            android:layout_width="match_parent"            android:layout_height="wrap_content">            <android.support.v4.view.ViewPager                android:id="@+id/goods_pager"                android:layout_width="match_parent"                android:background="@mipmap/apple"                android:layout_height="300dp">            </android.support.v4.view.ViewPager>            <RelativeLayout                android:background="@color/colorWhite"                android:layout_width="match_parent"                android:padding="13dp"                android:layout_height="wrap_content">                <TextView                    android:id="@+id/goods_name"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:text="@string/nametext"                    android:textSize="15sp"                    android:textColor="@color/colorBlack"                    />                <TextView                    android:textColor="@color/colorPrimary"                    android:textSize="19sp"                    android:layout_marginTop="10dp"                    android:layout_below="@+id/goods_name"                    android:text="@string/price"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"/>                <TextView                    android:id="@+id/goods_price"                    android:textColor="@color/colorPrimary"                    android:textSize="19sp"                    android:layout_marginTop="10dp"                    android:layout_marginLeft="15dp"                    android:layout_below="@+id/goods_name"                    android:text="16"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"/>                <TextView                    android:layout_marginTop="10dp"                    android:layout_below="@+id/goods_name"                    android:drawableLeft="@mipmap/share"                    android:text="@string/share"                    android:layout_alignParentRight="true"                    android:textColor="@color/colorBlack"                    android:layout_width="wrap_content"                    android:textSize="12sp"                    android:layout_height="wrap_content"/>            </RelativeLayout>            <RelativeLayout                android:layout_marginTop="10dp"                android:background="@color/colorWhite"                android:padding="13dp"                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:textSize="13sp"                    android:text="@string/evaluation"                    android:textColor="@color/colorBlack"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"/>                <TextView                    android:layout_marginLeft="60dp"                    android:id="@+id/goods_evaluation_number"                    android:textSize="13sp"                    android:text="(114)"                    android:textColor="@color/colorBlack"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"/>                <com.android.tkengine.elccommerce.utils.CircleImageView                    android:layout_marginTop="15dp"                    android:layout_below="@+id/goods_evaluation_number"                    android:id="@+id/goods_evaluation_icon"                    android:src="@drawable/touxiang"                    android:layout_width="30dp"                    android:layout_height="30dp"/>                <TextView                    android:layout_marginLeft="10dp"                    android:layout_marginTop="25dp"                    android:id="@+id/goods_evaluation_name"                    android:layout_below="@+id/goods_evaluation_number"                    android:layout_toRightOf="@+id/goods_evaluation_icon"                    android:layout_width="wrap_content"                    android:text="Cat"                    android:textSize="12sp"                    android:layout_height="wrap_content"/>                <RatingBar                    android:id="@+id/goods_grade"                    android:layout_below="@+id/goods_evaluation_number"                    android:layout_marginTop="25dp"                    android:layout_alignParentRight="true"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:numStars="5"                    android:rating="5"                    android:isIndicator="true"                    android:stepSize="1"                    style="@style/Base.Widget.AppCompat.RatingBar.Small"/>                <TextView                    android:layout_marginTop="10dp"                    android:id="@+id/goods_evaluation_content"                    android:layout_below="@+id/goods_evaluation_icon"                    android:layout_width="wrap_content"                    android:text="haochihaochihaohoiefjowenoiuejwvew"                    android:textSize="12sp"                    android:layout_height="wrap_content"/>                <Button                    android:background="@drawable/button_shape"                    android:layout_centerHorizontal="true"                    android:layout_marginTop="15dp"                    android:layout_below="@+id/goods_evaluation_content"                    android:id="@+id/all_evaluation"                    android:text="@string/more_evaluation"                    android:textSize="12sp"                    android:layout_width="100dp"                    android:textColor="@color/colorPrimary"                    android:layout_height="25dp"/>            </RelativeLayout>            <RelativeLayout                android:layout_marginTop="10dp"                android:background="@color/colorWhite"                android:padding="13dp"                android:layout_width="match_parent"                android:layout_height="wrap_content">                <ImageView                    android:id="@+id/goods_store_icon"                    android:layout_width="80dp"                    android:layout_height="80dp"                    android:src="@mipmap/apple"/>                <TextView                    android:layout_marginTop="12dp"                    android:id="@+id/goods_store_name"                    android:text="呆呆熊文具精品店"                    android:layout_marginLeft="10dp"                    android:textSize="15sp"                    android:layout_toRightOf="@+id/goods_store_icon"                    android:textColor="@color/colorBlack"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"/>                <RatingBar                    android:id="@+id/goods_store_grade"                    android:layout_toRightOf="@+id/goods_store_icon"                    android:layout_marginLeft="10dp"                    android:layout_below="@+id/goods_store_name"                    android:layout_marginTop="10dp"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:numStars="5"                    android:rating="5"                    android:isIndicator="true"                    android:stepSize="1"                    style="@style/Base.Widget.AppCompat.RatingBar.Small"/>                <Button                android:background="@drawable/button_shape"               android:layout_alignParentRight="true"                android:layout_marginRight="10dp"                android:layout_marginTop="15dp"                android:layout_below="@+id/goods_store_grade"                android:id="@+id/all_goods"                android:text="@string/all_goods"                android:textSize="12sp"                android:layout_width="80dp"                android:textColor="@color/colorPrimary"                android:layout_height="25dp"/>            </RelativeLayout>            <RelativeLayout                android:layout_marginTop="10dp"                android:background="@color/colorWhite"                android:padding="13dp"                android:layout_width="match_parent"                android:layout_height="wrap_content">                <TextView                    android:text="@string/goods_message"                    android:textColor="@color/colorBlack"                    android:textSize="13sp"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"/>                <TextView                    android:padding="10dp"                    android:textSize="12sp"                    android:text="0.5mm全针管中性笔 一支好写的水笔"                    android:layout_marginTop="25dp"                    android:layout_marginBottom="10dp"                    android:layout_width="match_parent"                    android:layout_height="wrap_content"                    android:background="@color/colorLightGray"/>            </RelativeLayout>            <android.support.v7.widget.RecyclerView                android:layout_marginTop="10dp"                android:id="@+id/goods_content"                android:layout_width="match_parent"                android:layout_height="wrap_content"/>        </LinearLayout>    </ScrollView>    <RelativeLayout        android:background="@color/colorWhite"        android:layout_alignParentBottom="true"        android:layout_width="match_parent"        android:layout_height="40dp">        <View            android:layout_width="match_parent"            android:layout_height="1.0px"            android:layout_alignParentTop="true"            android:background="@color/colorGray" />        <TextView            android:gravity="center"            android:id="@+id/add_cart"            android:layout_toLeftOf="@+id/purchase_imm"            android:text="@string/add_cart"            android:background="@color/colorRed"            android:textColor="@color/colorWhite"            android:layout_width="100dp"            android:layout_height="match_parent"/>        <TextView            android:gravity="center"            android:id="@+id/purchase_imm"            android:layout_alignParentRight="true"            android:text="@string/purchase_imm"            android:background="@color/colorPrimaryDark"            android:textColor="@color/colorWhite"            android:layout_width="100dp"            android:layout_height="match_parent"/>    </RelativeLayout></RelativeLayout>