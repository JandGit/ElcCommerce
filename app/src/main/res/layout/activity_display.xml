<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"              android:layout_width="match_parent"                android:fitsSystemWindows="true"                android:clipToPadding="true"              android:layout_height="match_parent">    <include layout="@layout/title"/>            <android.support.v7.widget.RecyclerView                android:layout_marginTop="40dp"                android:id="@+id/goods_content"                android:layout_width="match_parent"                android:layout_height="wrap_content"/>    <RelativeLayout        android:background="@color/colorWhite"        android:layout_alignParentBottom="true"        android:layout_width="match_parent"        android:layout_height="40dp">        <View            android:layout_width="match_parent"            android:layout_height="1.0px"            android:layout_alignParentTop="true"            android:background="@color/colorGray" />        <TextView            android:gravity="center"            android:id="@+id/add_cart"            android:layout_toLeftOf="@+id/purchase_imm"            android:text="@string/add_cart"            android:background="@color/colorRed"            android:textColor="@color/colorWhite"            android:layout_width="100dp"            android:layout_height="match_parent"/>        <TextView            android:gravity="center"            android:id="@+id/purchase_imm"            android:layout_alignParentRight="true"            android:text="@string/purchase_imm"            android:background="@color/colorPrimaryDark"            android:textColor="@color/colorWhite"            android:layout_width="100dp"            android:layout_height="match_parent"/>    </RelativeLayout></RelativeLayout>