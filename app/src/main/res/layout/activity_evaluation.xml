<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"              android:orientation="vertical"                android:background="@color/colorWhite"                android:focusable="true"                android:focusableInTouchMode="true"              android:layout_width="match_parent"              android:layout_height="match_parent">    <include layout="@layout/title"/>    <TextView        android:id="@+id/evaluation_post"        android:layout_alignParentRight="true"        android:text="提交"        android:textSize="16sp"        android:textColor="@color/colorPrimary"        android:background="@color/colorWhite"        android:layout_width="70dp"        android:gravity="center"        android:layout_height="39dp"/>        <ImageView            android:layout_marginLeft="20dp"            android:layout_marginTop="60dp"            android:src="@mipmap/ic_launcher"            android:layout_width="70dp"            android:layout_height="70dp"            android:id="@+id/evaluation_imageView"/>        <TextView            android:layout_marginTop="75dp"            android:layout_marginLeft="110dp"            android:text="评分"            android:textSize="16sp"            android:textColor="@color/colorBlack"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:id="@+id/textView4"/>        <RatingBar            android:numStars="5"            android:layout_marginTop="8dp"            style="@style/Base.Widget.AppCompat.RatingBar.Small"            android:layout_width="wrap_content"            android:layout_height="wrap_content"            android:id="@+id/evaluation_ratingBar"            android:stepSize="1"            android:layout_below="@+id/textView4"            android:layout_alignLeft="@+id/textView4"            android:layout_alignStart="@+id/textView4"/>        <EditText            android:id="@+id/evaluation_content"            android:layout_marginTop="20dp"            android:hint="写下购买体会和商品质量来帮助其他小伙伴~"            android:padding="7dp"            android:textSize="11sp"            android:gravity="top"            android:layout_below="@+id/evaluation_imageView"            android:background="#F2Feee"            android:layout_width="match_parent"            android:layout_height="130dp"/></RelativeLayout>